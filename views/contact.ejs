<html>
    <head>
        <title style='font-family:Georgia'>Contact Kris</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <style>
        input[type=text], select, textarea {
          width: 100%;
          padding: 12px;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
          margin-top: 6px;
          margin-bottom: 16px;
          resize: vertical;
        }

        body {
          background-color: #D3D3D3
        }
        </style>
    </head>
    <body>
        <div>
          <div class="container">
              <h1 style='font-family:Georgia'>Contact Kris Here</h1>
            <div class="form-group">
                <form action='/thanks' method='POST'>
                    <label for="firstName">First Name:</label>
                    <input type="text" name='firstName' class="form-control" id="firstName" aria-describedby="emailHelp" placeholder="First Name Here...">
                  </div>
                  <div class="form-group">
                    <form action='/thanks' method='POST'>
                    <label for="lastName">Last Name:</label>
                    <input type="text" name='lastName' class="form-control" id="lastName" aria-describedby="emailHelp" placeholder="Last Name Here...">
                  </div>
                  <div class="form-group">
                      <label for="lastName">Company Name:</label>
                      <input type="text" name='company' class="form-control" id="company" aria-describedby="emailHelp" placeholder="Company Name Here...">
                    </div>
                    <div class="form-group">
                      <label for="email">Email:</label>
                      <input type="email" name='contact' class="form-control" id="contact" placeholder="Email Here...">
                    </div>
                    <div class='form-group'>
                    <label for="text">Message:</label>
                    <textarea id="subject" name="subject" type="text" class='form-control' placeholder='Write Me a Message Here...'></textarea>  
                  </div>          
                  <button type="submit" class="btn btn-primary">Send Contact Info</button>
                </div>
            </form>
        </div>
    </body>
</html>